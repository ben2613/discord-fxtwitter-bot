{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}
